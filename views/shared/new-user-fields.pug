.field
  label.label Username
  input.input(type="text", name="username", autofocus, value=user.username required)
.field
  label.label Email
  input.input(type="email", name="email", value=user.email required)
.field
  label.label Password
  input.input(type="password", name="password" required)
.field
  label.label Password Confirmation
  input.input(type="password", name="passwordConfirmation" required)
